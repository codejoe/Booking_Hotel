<div id="middlePan">

  <div class="small-2 large-12 columns">
    <h1>Admin::Type#index</h1>
  </div>

  <div class="small-2 large-12 columns">
    <dl class="sub-nav">
      <dd class="active"><a href="#">Nav: </a></dd>
      <dd><%= link_to 'Rooms', admin_rooms_path %></dd>
      <dd><%= link_to 'Types', admin_types_path %></dd>
    </dl>
  </div>

  <div class="small-2 large-12 columns">
    <p><%= link_to 'New Type', new_admin_type_path %></p>
    <table class="table">
      <tr>
        <th> No. </th>
        <th> Type Name </th>
      </tr>
      <% 
      if params[:page] == 0 || params[:page] == 1 || params[:page] == nil
        number = 0
      else
        number = (params[:page].to_i - 1) * 10     
      end
      %>
      <% @types.each do |type| %>
      <tr>
        <td><%= number += 1 %>.</td>
        <td><%= type.name %></td>
        <td><%= link_to 'Edit', edit_admin_type_path(type.id) %> | 
        <%= link_to 'Delete', admin_type_path(type.id), method: 'delete', confirm: "Are You Sure \nDelete Type #{type.name}?"  %> </td>
      </tr>
      <% end %>
    </table>
    <p><%= paginate @types %></p>
  </div>
</div>